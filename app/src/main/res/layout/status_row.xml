<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    tools:context=".view.main.story.StoryFragment">


    <ImageView
        android:id="@+id/userStatusImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/userImageContentDescription" />

    <LinearLayout
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/userStatusImage">

            <TextView
                android:id="@+id/StatusUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="@string/sampleUserName"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/StatusUserAlias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/sampleAlias"/>
        </LinearLayout>

    <TextView
        android:id="@+id/statusTimeStamp"
        android:layout_below="@id/user"
        android:layout_toRightOf="@id/userStatusImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date goes here">
    </TextView>


    <TextView
        android:id="@+id/Status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userStatusImage"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="10dp">
    </TextView>


</RelativeLayout>