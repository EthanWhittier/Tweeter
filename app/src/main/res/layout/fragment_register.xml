<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LoginActivity"
    android:gravity="center"
    android:background="@color/appColor">


    <TextView
        android:id="@+id/AppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Twitter"
        android:textSize="35dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/textColor"
        android:layout_marginLeft="120dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/twitter"
        android:layout_toRightOf="@id/AppName"
        android:scaleType="fitXY"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="15dp"/>


    <LinearLayout
        android:id="@+id/FirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/AppName"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp">


        <TextView
            android:id="@+id/FirstNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name:"
            android:layout_below="@id/AppName"
            android:textColor="@color/textColor"/>

        <EditText
            android:id="@+id/FirstNameEdit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/FirstNameText"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/LastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/FirstName"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/LastNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name:"
            android:textColor="@color/textColor"/>

        <EditText
            android:id="@+id/LastNameEdit"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/LastNameText" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/RegisterUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/LastName"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/RegisterUserNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textColor="@color/textColor"/>

        <EditText
            android:id="@+id/UsernameEdit"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/RegisterUserNameText" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/RegisterPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/RegisterUsername"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/RegisterPasswordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/textColor"/>

        <EditText
            android:id="@+id/PasswordEdit"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/RegisterPasswordText" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@id/RegisterPassword"
        android:layout_marginBottom="20dp">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/RegisterButton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Register"
            android:background="@color/buttonColor"/>


        <Button
            android:layout_below="@id/RegisterButton"
            android:id="@+id/CameraButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take a profile picture"
            android:textSize="14dp"
            android:textColor="@color/textColor"
            android:background="@android:color/transparent"/>


        <Button
        android:layout_below="@id/RegisterButton"
        android:id="@+id/LoginRegisterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already a User? Login"
        android:textSize="14dp"
        android:textColor="@color/textColor"
        android:background="@android:color/transparent"/>


    </LinearLayout>




</RelativeLayout>